pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/Eswasakthe/jenkins-docker.git'
            }
        }
        stage('build-image') {
            steps {
                dockerImage = docker.build("eswasakthe/jenkins:latest")
            }
        }
        stage('approve') {
            steps {
                timeout(time: 15, unit: "MINUTES") {
	                input message: 'Do you want to approve the deployment?', ok: 'Yes'
                }
            }
        }
        stage('push') {
            steps {
                withDockerRegistry([ credentialsId: "dockerhubaccount", url: "docker push eswasakthe/jenkins:latest" ]) {
                    dockerImage.push()
            }
        }
        }
    }
}
